<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="COUNT:\tThis is the amount of a particular electrical appliance in your home.\n\nAC LOAD WATTAGE:\tThis is the load rating of a particular electrical appliance in your home. It is usually rated in WATTS (W)\n\nDAILY USAGE HOURS:\tThis is the number of hours a particular electrical appliance is estimated to be in use per day."
            android:id="@+id/info_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="25dp"
            android:textColor="#323232" />
    </RelativeLayout>
</LinearLayout>