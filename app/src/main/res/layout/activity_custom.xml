<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".CustomHome"
    android:background="#f0f0f0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/body">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/header">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:text="Electrical Appliances:"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/appliance" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/appliance_box">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                card_view:cardElevation="4dp"
                card_view:cardBackgroundColor="#ffffffff"
                android:foreground="?android:attr/selectableItemBackground">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="LIGHTINGS"
                        android:id="@+id/lightings_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_margin="16dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lightings_text"
                        android:layout_alignLeft="@+id/lightings_text"
                        android:layout_alignStart="@+id/lightings_text"
                        android:layout_marginRight="16dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/light_count"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="@color/colorPrimary"
                                android:gravity="center_vertical|center_horizontal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="COUNT"
                                android:id="@+id/count_1"
                                android:layout_below="@+id/light_count"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/light_load"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="AC LOAD WATTAGE [W]"
                                android:id="@+id/load_1"
                                android:layout_below="@id/light_load"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_horizontal"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/light_cycle"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="DAILY DUTY CYCLE [HR]"
                                android:id="@+id/cycle_1"
                                android:layout_below="@+id/light_cycle"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12dp"
                                android:gravity="center_horizontal" />
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                card_view:cardElevation="4dp"
                card_view:cardBackgroundColor="#ffffffff"
                android:foreground="?android:attr/selectableItemBackground">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="TELEVISION SET"
                        android:id="@+id/tv_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_margin="16dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_text"
                        android:layout_alignLeft="@+id/tv_text"
                        android:layout_alignStart="@+id/tv_text"
                        android:layout_marginRight="16dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/tv_count"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="@color/colorPrimary"
                                android:gravity="center_vertical|center_horizontal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="COUNT"
                                android:id="@+id/count_2"
                                android:layout_below="@+id/tv_count"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/tv_load"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="AC LOAD WATTAGE [W]"
                                android:id="@+id/load_2"
                                android:layout_below="@id/tv_load"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_horizontal"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/tv_cycle"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="DAILY DUTY CYCLE [HR]"
                                android:id="@+id/cycle_2"
                                android:layout_below="@+id/tv_cycle"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12dp"
                                android:gravity="center_horizontal" />
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                card_view:cardElevation="4dp"
                card_view:cardBackgroundColor="#ffffffff"
                android:foreground="?android:attr/selectableItemBackground">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="REFRIGERATOR UNIT"
                        android:id="@+id/fridge_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_margin="16dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fridge_text"
                        android:layout_alignLeft="@+id/fridge_text"
                        android:layout_alignStart="@+id/fridge_text"
                        android:layout_marginRight="16dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/fridge_count"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="@color/colorPrimary"
                                android:gravity="center_vertical|center_horizontal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="COUNT"
                                android:id="@+id/count_3"
                                android:layout_below="@+id/fridge_count"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/fridge_load"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="AC LOAD WATTAGE [W]"
                                android:id="@+id/load_3"
                                android:layout_below="@id/fridge_load"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_horizontal"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/fridge_cycle"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="DAILY DUTY CYCLE [HR]"
                                android:id="@+id/cycle_3"
                                android:layout_below="@+id/fridge_cycle"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12dp"
                                android:gravity="center_horizontal" />
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </RelativeLayout>

    </ScrollView>
</RelativeLayout>
