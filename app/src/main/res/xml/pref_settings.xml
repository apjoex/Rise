<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

        <PreferenceCategory android:title="Battery">

                <ListPreference
                    android:key="autonomy"
                    android:title="Days of Autonomy"
                    android:summary="\nNumber of days the system is needed to operate when there is no power generated by the PV panels"
                    android:defaultValue="3"
                    android:entries="@array/autonomy"
                    android:entryValues="@array/autonomy_alias"/>

                <ListPreference
                    android:key="depth_of_discharge"
                    android:title="Depth of discharge"
                    android:summary="\n%s"
                    android:defaultValue="3"
                    android:entries="@array/dod"
                    android:entryValues="@array/dod_alias"/>

                <ListPreference
                    android:key="batt_eff"
                    android:title="Battery efficiency"
                    android:summary="\n%s"
                    android:defaultValue="4"
                    android:entries="@array/batt"
                    android:entryValues="@array/batt_alias"/>

        </PreferenceCategory>


        <PreferenceCategory android:title="Charge controller">

                <ListPreference
                    android:key="safety_factor"
                    android:title="Safety factor"
                    android:summary="\n%s"
                    android:defaultValue="1.25"
                    android:entries="@array/factors"
                    android:entryValues="@array/factors_alias"/>

                <ListPreference
                    android:key="cont_eff"
                    android:title="Controller efficiency"
                    android:summary="\n%s"
                    android:defaultValue="9"
                    android:entries="@array/contr"
                    android:entryValues="@array/contr_alias"/>

        </PreferenceCategory>


        <PreferenceCategory android:title="Inverter">

                <ListPreference
                    android:key="inv_eff"
                    android:title="Inverter efficiency"
                    android:summary="\n%s"
                    android:defaultValue="3"
                    android:entries="@array/invt"
                    android:entryValues="@array/invt_alias"/>

        </PreferenceCategory>




</PreferenceScreen>